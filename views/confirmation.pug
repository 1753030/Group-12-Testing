extends layout

block content
  // Start Banner Area
  section.banner-area.organic-breadcrumb
    .container
      .breadcrumb-banner.d-flex.flex-wrap.align-items-center.justify-content-end
        .col-first
          h1 Trang xác nhận
          nav.d-flex.align-items-center
            a(href='index.html')
              | Trang chủ
              span.lnr.lnr-arrow-right
            a(href='#') Xác nhận
  // End Banner Area
  // Start Order Details Area
  section.order_details.section_gap
    .container
      h3.title_confirmation Cảm ơn bạn. Đơn đặt hàng của bạn đã được nhận!
      .row.order_d_inner
        .col-lg-4
          .details_item
            h4 Thông tin đơn hàng
            ul.list
              li
                a(href='#')
                  span Order number
                  |  : 60235
              li
                a(href='#')
                  span Date
                  |  : Los Angeles
              li
                a(href='#')
                  span Total
                  |  : USD 2210
              li
                a(href='#')
                  span Payment method
                  |  : Check payments
        .col-lg-4
          .details_item
            h4 Địa chỉ thanh toán
            ul.list
              li
                a(href='#')
                  span Đường
                  |  : 56/8
              li
                a(href='#')
                  span Thành phố
                  |  : Los Angeles
              li
                a(href='#')
                  span Quốc gia
                  |  : United States
              li
                a(href='#')
                  span Mã bưu điện 
                  |  : 36952
        .col-lg-4
          .details_item
            h4 Địa chỉ giao hàng
            ul.list
              li
                a(href='#')
                  span Đường
                  |  : 56/8
              li
                a(href='#')
                  span Thành phố
                  |  : Los Angeles
              li
                a(href='#')
                  span Quốc gia
                  |  : United States
              li
                a(href='#')
                  span Mã bưu điện 
                  |  : 36952
