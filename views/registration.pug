extends layout

block content
  // Start Banner Area
  section.banner-area.organic-breadcrumb
    .container
      .breadcrumb-banner.d-flex.flex-wrap.align-items-center.justify-content-end
        .col-first
          h1 Trang đăng ký
          nav.d-flex.align-items-center
            a(href='index.html')
              | Trang chủ
              span.lnr.lnr-arrow-right
            a(href='login.html')
              | Đăng nhập/đăng ký
              span.lnr.lnr-arrow-right
            a(href='#') Đăng ký
  // End Banner Area
  // Start Register Box Area
  section.login_box_area.section_gap
    .container
      .row
        .col-lg-12
          .login_form_inner
            h3 Đăng ký
            form#contactForm.row.login_form(action='contact_process.php', method='post', novalidate='novalidate')
              .col-md-12.form-group
                input#name.form-control(type='text', name='name', placeholder='Tên tài khoản', onfocus="this.placeholder = ''", onblur="this.placeholder = 'Username'")
              .col-md-12.form-group
                input#name.form-control(type='password', name='name', placeholder='Mật khẩu', onfocus="this.placeholder = ''", onblur="this.placeholder = 'Password'")
              .col-md-12.form-group
                input#name.form-control(type='password', name='name', placeholder='Nhập lại mật khẩu', onfocus="this.placeholder = ''", onblur="this.placeholder = 'Password'")
              .col-md-12.form-group
                button.primary-btn(type='submit', value='submit') Đăng ký
  // End Register Box Area